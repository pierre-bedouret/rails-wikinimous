<div class="d-flex justify-content-between align-items-center">
  <h1><%= @article.title %></h1>
  <div>
    <%= link_to '<i class="fas fa-trash"></i> Delete this article'.html_safe, article_path(@article.id), class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
    <%= link_to '<i class="fas fa-pen"></i> Edit this article'.html_safe, edit_article_path, class: 'btn btn-secondary' %>
  </div>
</div>
<div class="alert alert-secondary" role="alert">
  <p><%= @article.content %></p>
</div>
<hr>
<div class="link">
  <i class="fas fa-undo-alt"></i> <%= link_to "Back to List", articles_path %>
</div>
